@require 'typography.styl'
@require '../modules/layout-vars.styl'
@require '../modules/palette.styl'

@import 'nib'

$topbar-border      = $secondary-gray-1
$last-updated-color = $secondary-gray-2
$subnav-background  = $secondary-gray-3

*
  margin 0
  padding 0
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html
body
  height 100%
  background-color $secondary-gray-4

#root
  position relative
  padding-left $nav-width
  height 100%
  min-width 1420px

  &:after
    content ""
    display table
    clear both

.page.registration
  height 100%
  background-color white

.section
  padding 1rem 2rem

  &:after
    content ""
    display table
    clear both

  .topbar + &
    padding-top $top-bar-height + 10px

  .nav + &
    padding-top $top-bar-height + $subnav-height + 10px

  &.table
    margin 0
    padding 0

  h1
    font-family Lato-Medium
    font-size 23px
    color $main-navy
    margin-top 10px
    margin-bottom 10px
    font-weight normal

  .header
    width 100%
    height 88px
    background-color $secondary-gray-4
    margin -20px -20px 0 -20px
    padding 40px 30px
    border-bottom 1px solid $secondary-gray-1
    h1
      font-size 19px
      line-height 19px
      padding 0
      margin 0

  .form
    padding 40px 30px
    width 440px
    font-size 13px

    hr
      border 1px solid $secondary-gray-8
      margin 40px 0

    input
      border-radius 5px
      border 1px solid $secondary-gray-1
      padding 15px 20px
      font-size 13px
      font-family Lato-Bold
      margin-bottom 25px

      &:placeholder-shown
        font-style italic


      &:not([type=checkbox])
        width 100%
        height 40px

      &[type=checkbox]
        display inline
        margin-right 15px
        padding-bottom 0
        margin-bottom 0

    button
      width 100px
      height 45px
      border-radius 2px
      border 0
      background-color $secondary-blue
      color white
      font-family Lato-Bold
      font-size 16px

.topbar
  padding 0 3rem 1rem
  background-color white
  border-bottom 1px solid $topbar-border
  height $top-bar-height
  width "calc(100% - %s)" % $nav-width
  position fixed
  top 0
  right 0
  z-index 1

  h2
    font-size 3.6rem
    font-family Lato-Medium
    color $main-navy
    line-height $top-bar-height
    padding-top 0
    margin-top 0
    display inline-block

  .last-updated
    display inline-block
    margin-left 25px
    line-height $top-bar-height
    vertical-align bottom
    font-size 1.1rem
    font-family Lato-Medium
    color $last-updated-color

    strong
      font-family Lato-Bold

.page .nav
  padding 0 3rem 1rem
  background-color $subnav-background
  text-transform uppercase
  letter-spacing 2.17px
  border-bottom 1px solid $secondary-gray-1
  height $subnav-height
  position fixed
  top $top-bar-height
  right 0
  width "calc(100% - %s)" % $nav-width
  z-index 1

.sql-table
  margin 20 20

a.toggle
  font Lato-Bold
  font-size 1rem
  color $secondary-light-gray

.status
  font-size 9px
  &.missing
    color $secondary-red
  &.stale
    color $secondary-gold
  &.healthy
    color $main-green
